<div class="my-3" data-controller="character-counter" data-character-counter-max-value="200">
  <%= form_with url: messages_path, id: "new_message_form" do |f| %>
    <%= f.label :body, "Message:", class: "mr-2" %>
      <%= f.text_field :body, placeholder: "What you wanna say?", class: "my-2 mr-2 border border-gray-300 rounded-lg text-center", 
                            data: { "character-counter-target": "input", 
                            action: "input->character-counter#input" } %>
    <div class="text-sm text-red-500" data-character-counter-target="counter" "></div>
   <%= f.submit "Post message", class: "bg-green-600 text-white font-bold py-2 px-4 rounded hover:bg-green-900" %>
  <% end %>
</div>