    <div data-controller="message-counter">
      <h3 class="text-xl font-bold my-0 text-left">
          <%= render MessageCounterComponent.new(messages: @messages) %>
      </h3>
    </div>  

      <div id="messages" data-action="turbo:render->message-counter#updateCount">
        <%= render MessageComponent.with_collection(@messages) %>
      </div>
  </div>
</div>
